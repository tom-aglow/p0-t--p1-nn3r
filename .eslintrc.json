{
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "plugins": ["react"],
  "rules": {
    "semi": [2, "never"],
    "eqeqeq": "off",
    "arrow-parens": ["error", "as-needed"],
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "react/no-did-mount-set-state": "off",
    "import/no-unresolved": [2, { "ignore": ["components", "db", "styles"] }]
  }
}
